<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Añade tu obra</h1>

        <form action="/works/create" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="field1">Titulo de la obra</label>
                <input name="title" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Imagen de la obra</label>
                <input name="imageInput" type="file" class="form-control" id="field2">
            </div>
            <div class="form-group">
                <label for="field3">Descripcion de la obra</label>
                <input name="description" type="text" class="form-control" id="field3">
            </div>
            <div class="form-group">
                <label for="field6">Tags</label>
                <input name="tags" type="text" class="form-control" id="field6">
            </div>
            <div class="form-group">
                <label for="field6">Precio de la obra</label>
                <input name="price" type="number" class="form-control" id="field6">
            </div>
            <div class="form-group">
                <label for="field6">Localización de la obra</label>
                <input name="location" type="text" class="form-control" id="field7">
            </div>


            <button type="submit" class="btn btn-dark btn-block btn-lg">Publica tu obra</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}

        </form>

        <p>¿No tienes cuenta? <a href="/signup">¡Regístrate!</a></p>
    </div>
</div>