<h2>DETALLES DE OBRA</h2>




<form  action="/movies/{{id}}/new" method="POST">
    <label>Title: </label>
    <input type='text' name="title" value="{{work.title}}">
    <label>Genre: </label>
    <input type='text' name="autor" value="{{work.author}}">
    <label> Plot: </label>
    <textarea class="col-9 form-control" type='text' name="description" >{{work.description}}</textarea>
    <button class="btn btn-warning" type='submit' class='btn btn-info'>Edit</button>
</form>

<a class="btn btn-primary" href="/movies" role="button">Go back</a>


