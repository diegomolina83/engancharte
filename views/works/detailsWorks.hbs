<h1>{{work.title}}</h1>


<div class="container">
    <div class="row">
        <div class="col-sm">
            <img id="image-work" class="indexImageDetail" src="{{work.imageUrl}}" alt="obra"></img>
            <h2> Description: {{work.description}}</h2>
            <h3> Author: <a href="/users/profile/{{work.user._id}}">{{work.user.username}}</a></h3>
            <p> Precio: {{work.price}}€</p>
        </div>
        <div class="col-sm">
            <div id="map"></div>
            <p>Localización de obra: </p>
            <div id="location"> {{work.location}} </div>
        </div>
    </div>
</div>


<script src="/javascripts/maps.js"></script>
<script src="/javascripts/map-styles.js"></script>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDZzm0DI7JwThVwysdtDJkdsFCktalySFc&callback=initMap"></script>