<h1>Perfil de {{user.username}} </h1>
<div class="profileHead">
  <img class="userEditImage" src="{{user.imageUrl}}" alt="User image profile">
  <td><a class="btn btn-outline-warning" href="/users/edit/{{user._id}}">Editar mi usuario </a></td>
</div>


<h2>Gente a la que sigues: </h2>
<div class="cards">
  {{#each users}}
  <div class="card" style="width: 18rem;">
    <a class="profileDetail" href="/users/profile/{{_id}}"><img class="card-img-top" src="{{imageUrl}}"
        alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{username}}</h5>
    </a>
    {{!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
        content. --}}
    </p>
    <a class="{{../msgObj.msg}} btn btn-outline-warning" href="/users/unfollow/{{_id}}">Dejar de seguir </a>
  </div>
</div>
{{/each}}
</div>


<div class="container">



  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Username</th>
        <th scope="col">Image</th>
        <th scope="col">Handle</th>
      </tr>
    </thead>
    <tbody>

      {{#each likes}}
      <tr>
        <th scope="row"><a href="/works/details/{{_id}}">+</a></th>
        <td>{{title}}</td>
        <td><img class="userListImage" src="{{imageUrl}}" alt=""></td>
        <td><a class="{{../msgObj.msg}} btn btn-outline-warning" href="/works/unfollow/{{_id}}">Dejar de seguir </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/api-handlers.js"></script>
<script src="/javascripts/app.js"></script>