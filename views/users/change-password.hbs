<form action="/users/edit/changePassword/{{_id}}" method="post">

    <div class="form-group">
        <label for="field2">Contraseña</label>
        <input name="password" type="password" class="form-control" id="field4"
            placeholder="Introduce tu contraseña nueva" required>
        <small class="form-text text-muted">Nunca compartas tu contraseña</small>
    </div>

    <button type="submit" class="btn btn-dark btn-block btn-lg">Modificar los datos</button>

    {{#if errorMsg}}
    <div id="errorMsg">{{{errorMsg}}}</div>
    {{/if}}
</form>